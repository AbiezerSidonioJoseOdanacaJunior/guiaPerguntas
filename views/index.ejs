<%- include('./partials/header.ejs') %>
<body>
    <%- include('./partials/navbar.ejs') %>
    <h1 class="title" >Bem vindos ao site Bibi</h1>
    
    <div class="container">
        <hr>
        <h5>Perguntas</h5>
        <hr>
       <a href="./perguntar" class="btn btn-primary mb-3">Perguntar</a>
        <% perguntas.forEach(pergunta => { %>
            <div class="card">
                <div class="card-body">
                    <h3><%= pergunta.titulo %></h3>
                </div>
                <div class="card-footer">
                    <a href="./pergunta/<%= pergunta.id %>">
                        <button class="btn btn-success">Responder</button>
                    </a>
                </div>
            </div>
        <% }) %>
    </div>
    
</body>
<%- include('./partials/footer.ejs') %>

